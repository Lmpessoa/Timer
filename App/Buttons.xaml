<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DrawingGroup x:Key="StopGroup" ClipGeometry="M0,0 V30 H30 V0 H0 Z">
        <GeometryDrawing>
            <GeometryDrawing.Brush>
                <SolidColorBrush Color="#FF800000" />
            </GeometryDrawing.Brush>
            <GeometryDrawing.Geometry>
                <RectangleGeometry Rect="0,0,30,30"/>
            </GeometryDrawing.Geometry>
        </GeometryDrawing>
    </DrawingGroup>
    <DrawingGroup x:Key="StartGroup" ClipGeometry="M0,0 V30 H30 V0 H0 Z">
        <GeometryDrawing>
            <GeometryDrawing.Brush>
                <SolidColorBrush Color="#FF008000"/>
            </GeometryDrawing.Brush>
            <GeometryDrawing.Geometry>
                <PathGeometry Figures="M 30,13 L 2,0  L 2,30 Z"/>
            </GeometryDrawing.Geometry>
        </GeometryDrawing>
    </DrawingGroup>
    <DrawingImage x:Key="StartImage" Drawing="{StaticResource StartGroup}" />
    <DrawingImage x:Key="StopImage" Drawing="{StaticResource StopGroup}" />
</ResourceDictionary>