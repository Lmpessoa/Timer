<Window x:Class="Timer.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Timer.Properties"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.display_title}" Height="480" Width="640" ResizeMode="NoResize" Background="Black" KeyUp="Window_KeyUp" Closing="Window_Closing" Icon="formicon.ico">
    <Viewbox Stretch="Uniform">
        <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <Image x:Name="imageBox"  Width="600" Height="200" Margin="50"/>
        </Grid>
    </Viewbox>
</Window>
